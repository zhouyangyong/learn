$font_color_white = #fff

html, body
    width 100%

.nav
    height 1.067rem
    font-size 18px
    text-align center
    background-color #1e2025
    padding 6px
    box-sizing border-box
    .arrow-left
        float left
        height 100%
        position relative
        &:after
            content ""
            width 12px
            height 12px
            position absolute
            top 50%
            left 16px
            border 2px solid #fff
            border-width 0 0 2px 2px
            box-sizing border-box
            transform rotate(45deg) translateY(-51%)
    span
        color $font_color_white
        display inline-block
.page
    background-color #f4f4f4
    position relative
    z-index 1
    margin 0
    color #555
    min-width 3.1rem
    -webkit-user-select none
    -webkit-tap-highlight-color rgba(255,255,255,0)
    font-size 14px/1.5 Arial,Helvetica,sans-serif
    section 
        background-color #fff
        border-bottom 1px solid #e5e5e5
    .movie-header
        padding 0
        background #f8f8f8
        border-bottom none
        .movie
            color $font_color_white
            padding 0.4rem
            line-height 1
            overflow hidden
            position relative
            box-sizing border-box
            filter blur(0)
            .movie-background, .movie-filter
                position absolute
                top 0
                right 0
                bottom 0
                left 0
            .movie-background
                z-index 0
                filter blur(0.6rem)
                background-image url(./image/header-bg.jpg)
                background-size cover
                background-repeat no-repeat
                background-position-y 40%
            .movie-filter
                background-color #40454d
                opacity 0.55
            .movie-container
                position relative
                z-index 1
                .movie-cover
                    float left
                    width 2.854rem
                    height 4rem
                    border 1px solid #f0f2f3
                    position relative
                    .link
                        cursor pointer
                        display block
                        width 100%
                        height 100%
                        .img
                            width 100%
                    &:after
                        content ""
                        width 0.667rem
                        height 0.667rem
                        border-radius 100%
                        background-image url(./image/bofang.png)
                        background-size 100% auto
                        position absolute
                        right 0.1rem
                        bottom 0.1rem
                        opacity 0.7
                .movie-content
                    overflow hidden
                    padding-left 0.4rem
                    .movie-name
                        font-size 17px
                        margin 0.08rem 0
                    .movie-ename
                        font-size 12px
                        margin-bottom 0.3rem
                    .movie-score
                        font-size 12px
                        margin-bottom 0.3rem
                        .rating
                            .img
                                width 0.48rem
                                height 0.48rem
                                margin-right 2px
                            .rating-score
                                font-size 0.48rem
                                color #ffc640

