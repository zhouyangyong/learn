/* pages/index/index.wxss */

.section {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
}

.swiper {
    width: 100%;
    height: 600rpx;
}

.item-image {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.content {
    width: 100%;
    padding: 60rpx 40rpx 60rpx 40rpx;
    background-color: #f9f9f9;
}

.welfare {
    width: 400rpx;
    height: 100rpx;
    border-radius: 60rpx;
    background-color: #ffffff;
    box-shadow: 10rpx 10rpx 10rpx #eeeeee;
    text-align: center;
    display: inline-block;
}

.hongbao_box {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    line-height: 50rpx;  

}

.hongbaoIcon {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    vertical-align: middle;
}

.welfareText {
    font-family: 'Courier New', Courier, monospace;
    font-size: 30rpx;
    font-weight: bold;
    color: green;
    line-height: 100rpx;
    margin-left: 50rpx;
}

.collect {
    width: 200rpx;
    height: 100rpx;
    margin-left: -100rpx;
    text-align: center;
    /* display: inline-block; */
    background-color: red;
    float: right;
    overflow: hidden;
}

.collectText {
    font-size: 30rpx;
    color: green;
    line-height: 100rpx;
}

.collect_box {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: #ffffff;
    position: relative;
    display: inline-block;
    margin-left: 20rpx;
}

.collectIcon {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}