.songList {
    width: 100%;
    height: 100%;
    padding-right: 20rpx;
    box-sizing: border-box;
}

.list-index {
    text-align: center;
    width: 10%;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 26rpx;
    float: left;
}

.songItem {
    width: 90%;
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-left: 20rpx;
    border-bottom: 1px solid #e5e5e5;
    box-sizing: border-box;
    position: relative;
}

.songInfo {
    width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.songName {
    font-size: 30rpx;
    display: block;
}

.singerName {
    font-size: 20rpx;
    color: #878787;

}

.playIcon {
    position: absolute;
    right: 80rpx;
}

.play-icon-image {
    width: 50rpx;
    height: 50rpx;
}

.popup-icon-image {
    width: 40rpx;
    height: 50rpx;
}

.van-popup {
    width: 650rpx;
    height: 100%;
    border-radius: 20rpx;
}


.popup-content {
    width: 650rpx;
    height: 100%;
    border-radius: 20rpx;

}

.collect-song {  
    width: 100%; 
    height: 120rpx;
    border-bottom: 1px solid #e5e5e5;
    line-height: 120rpx;
    padding-left: 40rpx;
    box-sizing: border-box;
}

.cancel {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    padding-left: 40rpx;
    box-sizing: border-box;
}
