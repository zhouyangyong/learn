.songList {
    width: 100%;
    height: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.list-index {
    text-align: center;
    width: 60rpx;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 26rpx;
    float: left;
}

.songItem {
    width: 100%-60rpx;
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-left: 20rpx;
    border-bottom: 1px solid #e5e5e5;
    box-sizing: border-box;
}

.songName {
    font-size: 30rpx;
    display: block;
}

.singerName {

    font-size: 20rpx;
    color: #878787;
}

.playIcon {
    padding-left: 180rpx;
}

.play-icon-image {
    width: 50rpx;
    height: 50rpx;
}

.popup-icon-image {
    width: 40rpx;
    height: 50rpx;
}


.popup-content {
    width: 650rpx;
    height: 100%;
    border-radius: 20rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.collect-song {  
    width: 100%; 
    height: 120rpx;
    border-bottom: 1px solid #e5e5e5;
}

.cancel {
    width: 100%;
    height: 120rpx;
}