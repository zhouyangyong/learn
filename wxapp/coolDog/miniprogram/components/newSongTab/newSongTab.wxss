.newTab {
    width: 100%;
    height: 80rpx;
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
    background-color: #ffffff;
    display: flex; 
    text-align: center;
    justify-content: center;
}

.pos {
    flex: 1;
    position: relative;
}

.nt {
    font-size: 30rpx;
    line-height: 80rpx;
}

.line {
    width: 36rpx;
    height: 0;
    border: 1px solid;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    display: none;
}

.blue {
    color: #34a0e6;
}

.show {
    display: block;
}