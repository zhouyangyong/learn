  .playType {
    width: 230rpx;
    height: 240rpx;
    border: 1px solid #e5e5e5;
    background-color: #ffffff;
    box-shadow: 2rpx 2rpx #e5e5e5;
    border-radius: 6rpx;
    position: absolute;
    right: 20rpx;
    top: 70rpx;
    z-index: 200;
    padding: 0rpx 14rpx;
    box-sizing: border-box;
    display: none;
  }
  
  .pt {
    width: 100%;
    height: 80rpx;
    padding: 0 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .pti {
    width: 36rpx;
    height: 36rpx;
  }
  
  .ptt {
    font-size: 28rpx;
    padding-left: 20rpx;
  }
  
  .orderPlay {
    border-bottom: 1px solid #e5e5e5;
  }
  
  .randomPlay {
    border-bottom: 1px solid #e5e5e5;
  }
  
  .hidden {
      display: none;
  }
  
  .show {
    display: block;
  }