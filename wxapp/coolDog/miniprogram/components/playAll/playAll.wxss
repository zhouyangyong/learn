.play {
    width: 100%;
    height: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    position: relative;
}

.play-content {
    width: 100%;
    height: 80rpx;   
    border-bottom: 1px solid #e5e5e5;
    z-index: 10;
}

.play-content-left {
    width: 50%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    float: left;
}

.leftIcon {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    position: absolute;
    left: 0;
}

.leftTxt {
    font-size: 30rpx;
    position: absolute;
    left: 60rpx;
}

.play-content-right {
    width: 50%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    float: right;
}

.rightIcon {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 120rpx;
}

.rightTxt {
    font-size: 26rpx;
    padding-left: 20rpx;
    position: absolute;
    right: 0;
}

