.page {
    width: 100%;
    height: 100%;
}

.header {
    width: 100%;
    height: 100rpx;
    position: fixed;
    align-items: center;
    background-color: #ffffff;
    box-sizing: border-box;
    z-index: 20;
}

.headerItem {
    width: 100%;
    height: 100rpx;
    box-shadow: 0 4rpx 4rpx #eeeeee;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
}

.search-icon {
    position: absolute;
    align-self: center;
    width: 35rpx;
    height: 35rpx;
    margin-left: 200rpx;
    z-index: 20;
}

.header-input {
    width: 700rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    margin: 40rpx 20rpx 40rpx 20rpx;
    border-radius: 40rpx;
    background-color: #eeeeee;
    flex: 1;
}

.content {
    width: 100%;
    padding: 120rpx 20rpx 20rpx 20rpx;
    box-sizing: border-box;
}

.title {
    font-size: 40rpx;
    display: inline-block;
    padding-left: 280rpx;
}

.more {
    float: right;
}

.more-text {
    font-size: 26rpx;
    color: #aaaaaa;
    display: inline-block;
    padding-right: 2rpx;
}

.more-icon {
    width: 18rpx;
    height: 18rpx;
    border: 1px solid #aaaaaa;
    border-left-style: hidden;
    border-bottom-style: hidden;
    transform: rotate(45deg);
    display: inline-block
} 

.itemContent {
    width: 100%;
    padding-top: 30rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.cpt {
    width: 230rpx;
    height: 340rpx;
}

.song-image {
    width: 230rpx;
    height: 230rpx;
    display: block;
    border-radius: 8rpx;
    z-index: 1;
}

.songListName {
    font-size: 30rpx;
    display: block;
}

.songListSinger {
    font-size: 22rpx;
    color: #aaaaaa;
}

.new-song {
    padding-top: 40rpx;
}

.popSongImage {
    position: relative;
}

.playNum {
    position: absolute;
    padding-top: 180rpx;
    padding-left: 10rpx;
    display: inline-block;
    text-align: center;
}

.earPhoneIcon {
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    padding-top: 10rpx;
    z-index: 10;
}

.num {
    font-size: 22rpx;
    color: #ffffff;
    vertical-align: middle;
    padding-bottom: 5rpx;
    padding-left: 10rpx;
    display: inline-block;
    z-index: 10;
}

.listContent {
    padding-top: 34rpx;
}

.coolDogList {
    width: 100%;
    height: 100%;
    padding-top: 6rpx;
}

.list-image {
    width: 230rpx;
    height: 230rpx;
    border-radius: 8rpx;
}

.list-info {
    width: 350rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    float: right;
    padding-top: 20rpx;
    padding-bottom: 10rpx;
    padding-right: 110rpx;
    border-bottom: 1rpx solid #eeeeee;
}

.list-title {
    font-size: 34rpx;
}

.list-song {
    font-size: 28rpx;
    color: #aaaaaa;
}