.page {
    width: 100%;
    height: 100%;
}

.header {
    width: 100%;
    height: 100rpx;
    position: fixed;
    align-items: center;
    background-color: #ffffff;
    box-sizing: border-box;
}

.headerItem {
    width: 100%;
    height: 100rpx;
    box-shadow: 0 4rpx 4rpx #eeeeee;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
}

.search-icon {
    position: absolute;
    align-self: center;
    width: 35rpx;
    height: 35rpx;
    margin-left: 200rpx;
    z-index: 5;
}

.header-input {
    width: 700rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    margin: 40rpx 20rpx 40rpx 20rpx;
    border-radius: 40rpx;
    background-color: #eeeeee;
    flex: 1;
}

.content {
    width: 100%;
    padding: 120rpx 20rpx 20rpx 20rpx;
    box-sizing: border-box;
}

.title {
    font-size: 40rpx;
    display: inline-block;
    padding-left: 280rpx;
}

.more {
    float: right;
}

.more-text {
    font-size: 26rpx;
    color: #aaaaaa;
    display: inline-block;
    padding-right: 2rpx;
}

.more-icon {
    width: 18rpx;
    height: 18rpx;
    border: 1px solid #aaaaaa;
    border-left-style: hidden;
    border-bottom-style: hidden;
    transform: rotate(45deg);
    display: inline-block
} 

.itemContent {
    width: 100%;
    padding-top: 30rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.cpt {
    width: 200rpx;
    height: 200rpx;
    /* flex: 1; */
}

.song-image {
    width: 50rpx;
    height: 50rpx;
    display: block;
}

.songListName {
    font-size: 30rpx;
    display: block;
}

.songListSinger {
    font-size: 18rpx;
    color: #aaaaaa;
}