.page {
    width: 100%;
    height: 100%;
}

.header {
    height: 300rpx;
    /* box-sizing: border-box; */
    overflow: hidden;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.header-bg {
    width: 100%;
    margin-top: -100rpx;
    filter: blur(10rpx);
    z-index: 1;
}

.user {
    position: absolute;
    text-align: center;
    z-index: 10;
}

.user-avatar {
    width: 140rpx;
    height: 140rpx;
    display: block;
    border-radius: 50%;
    z-index: 30;
}

.user-name {
    font-size: 40rpx;
    color: #ffffff;
}

.content {
    width: 100%;
    background-color: #ffffff;
}